<!DOCTYPE html>
<html>
<head>
  <title>BackChannelSummer</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="content-wrap">

<div class="header">
<div class="tab-menu">
<ul>
<% 
  active = "/#{controller.controller_name}"
  pages = {
    posts_path => ['Home', 'tab-home'], 
    users_path => ['Manage Users', 'tab-users'], 
    reports_path => ['Reports', 'tab-reports']
  }
  pages.each do |page| 
    page_classname = page[1][1]
    page_classname += " active" if (page[0] == active && controller.action_name == "index")
%>
  <li class="<%= page_classname %>"><%= link_to page[1][0].html_safe, page[0] %></li>
<% end %>  
</ul>
</div>

<div class="user-login">
<ul>
<% if (current_user) %>
  <% classname = 'admin' if current_user.isAdmin? %>
  <li class="<% classname %>">Hello <%= current_user.email %></li>
  <li><%= link_to "Sign Out", signout_path %></li>
<% else %>
  <li><%= link_to "Log In", signin_path %></li>
  <li><%= link_to "Sign Up", signup_path %></li>
<% end %>
</ul>
</div>
</div>

<div class="content">

<p id="notice"><%= notice %></p>

<%= yield %>

</div>
</div>
</body>
</html>
