<p id="notice"><%= notice %></p>

<p>
  <b>Email:</b>
  <%= @post.email %>
</p>

<p>
  <b>Body:</b>
  <%= @post.body %>
</p>


<h2>Comments</h2>
<table>
<% @post.comments.each do |comment| %>
    <tr>
    <td>
      Commenter:
      <%= comment.email %>
    </td>

    <td>
        Comment:
      <%= comment.body %>
    </td>
    </tr>
<% end %>
</table>

<h2>Add a comment:</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
    <div class="field">
      <%= f.label :body %><br />
      <%= f.text_area :body %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
