<p>
  <b>Email:</b>
  <%= @post.user.email %>
</p>

<p>
  <b>Body:</b>
  <%= @post.body %>
</p>


<h2><%= @post.comments.length %> comments</h2>

<h2>Add a comment:</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
    <div class="field">
      <%= f.label :body %><br />
      <%= f.text_area :body %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>

<ul><li><%= link_to 'Cancel', users_path %></li></ul>