<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%# passowrd input is now obscured, no need for warning
  <div class="warn">
    <img src="/images/warn.png"></img>
    Passwords are stored as cleartext!<br />Don't enter your private passwords here.<br />We can see them.
  </div>
%>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Confirm password" %>
    <%= f.password_field :password_confirmation %>
  </div>
  <% if (current_user != nil) && current_user.isAdmin %>
    <div class="field">
      <%= f.label 'Administrator' %>
      <%= f.check_box :isAdmin %>
    </div>
  <% end %>
  <%= f.submit 'Ok', :class => 'button', :style => 'float:left' %>
  <ul class="actions">
    <li class="button"><%= link_to 'Cancel', users_path %></li>
  </ul>
<% end %>
