<% provide(:title, 'Sign In') %>
<h1>Welcome Back!</h1>


<div class="row">
  <div class="span6 offset3">
    <% if flash[:error] %>
        <p><%= flash[:error] %></p>
    <% end %>

    <%= form_for(:session, url: sessions_path) do |f| %>
      
      <div class="field">
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>
      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>
      <%= f.submit "Sign in", :class => 'button' %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>